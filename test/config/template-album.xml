<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="de" lang="de">
  <head>
    <base href="[rootPath]"/>
    <title id="theTitle">[theHeadTitle]</title>
    <meta name="description" content="Web Photo Album"/>
    <meta name="author"      content="Uwe Schmidt"/>
    <meta name="generator"   content="HXT Arrow based Photo2 Album Generator"/>
    <link rel="stylesheet"   type="text/css" href="config/album-1024x768.css"/>
    <script type="text/javascript" id="javascript">
      <!--
      var duration = 7000;
      var nextp    = '[nextPage]';
      var prevp    = '[prevPage]';
      var parentp  = '[parentPage]';
      var childp   = '[childPage]';
      var nextimg  = '[nextPic]';
      var previmg  = '[prevPic]';
      -->
    </script>
    <script type="text/javascript" src="config/album.js">
      <!-- the script content must not be empty, else firefox ignores it -->
    </script>
  </head>
  <body onload="initAlbum();"
        class="album"
        id="theAlbumBody">
    <table class="head">
      <tr>
        <td class="head1">
          <img src="100x75/[thePath].jpg"
               class="icon"
               title="[theTitle]"
               alt="[theTitle]"/>
        </td>
        <td class="head2">
          <div class="title"    id="theTitle">[theTitle]</div>
          <div class="subtitle" id="theSubTitle">[theSubTitle]</div>
          <div class="resources"/>
        </td>
        <td class="head3" id="theTopNav">
          <table class="nav" align="right">
            <tr>
              <td class="icon2">&nbsp;</td>
              <td class="icon2">
                <a href="javascript:parentPage();"
                   title="Album: [theParentTitle]"
                   id="theParentNav">
                  <img src="100x75/[theParentPath].jpg"
                       width="50"
                       height="37"
                       class="icon2"
                       alt="[theParentTitle]"/>
                </a>
              </td>
              <td class="icon2">&nbsp;</td>
            </tr>
            <tr>
              <td class="icon2">
                <a href="javascript:prevPage();"
                   title="zur&uuml;ck: [thePrevTitle]"
                   id="thePrevNav">
                  <img src="100x75/[thePrevPath].jpg"
                       width="50"
                       height="37"
                       class="icon2"
                       alt="zur&uuml;ck: [thePrevTitle]"/>
                </a>
              </td>
              <td class="icon2">
                <a href="javascript:childPage(&apos;[the1ChildPath].html&apos;);"
                   title="1.Bild: [the1ChildPath]"
                   id="the1ChildNav">
                  <img src="100x75/[the1ChildPath].jpg"
                       width="50"
                       height="37"
                       class="icon2"
                       alt="1.Bild: [the1ChildPath]"/>
                </a>
              </td>
              <td class="icon2">
                <a href="javascript:nextPage();"
                   title="weiter: [theNextTitle]"
                   id="theNextNav">
                  <img src="100x75/[theNextPath].jpg"
                       width="50"
                       height="37"
                       class="icon2"
                       alt="weiter: [theNextTitle]"/>
                </a>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
    <div class="ruler">
      <!-- the div body must be none empty, else firefox ignores it -->
    </div>
    <div class="album-content">
      <table>
        <tr id="theAlbumRow" size="9">
          <td class="icon"
              id="theAlbumCell">
            <a href="javascript:childPage(&apos;[theChildPath].html&apos;);"
               title="[theChildTitle]">
              <img src="100x75/[theChildPath].jpg"
                   width="100"
                   height="75"
                   class="icon"
                   alt="[theChildTitle]"/>
            </a>
          </td>
        </tr>
      </table>
    </div>
    <div class="ruler">
      <!-- the div body must be none empty, else firefox ignores it -->
    </div>
    <table class="head">
      <tr>
        <td class="head1"/>
        <td class="head2"/>
        <td class="head3" id="theBottomNav"/>
      </tr>
    </table>
  </body>
</html>

